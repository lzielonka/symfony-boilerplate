{% extends '@App/Base/base.html.twig' %}

{% block title %}{{ 'register_title'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6 col-sm-12">
                <form action="{{ path('register') }}" method="POST">
                    <p class="h4 text-center mb-4">{{ 'sign_up'|trans }}</p>
                    <div class="md-form">
                        <i class="fa fa-envelope prefix grey-text"></i>
                        {{ form_widget(form.email) }}
                        {{ form_label(form.email, 'email') }}
                        <div class="red-text">{{ form_errors(form.email, {'attr': {'class': 'red-text'}}) }}</div>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-lock prefix grey-text"></i>
                        {{ form_widget(form.passwd.first) }}
                        {{ form_label(form.passwd.first, 'password') }}
                        <div class="red-text">{{ form_errors(form.passwd.first) }}</div>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-lock prefix grey-text"></i>
                        {{ form_widget(form.passwd.second) }}
                        {{ form_label(form.passwd.second, 'repeat_password') }}
                        <div class="red-text">{{ form_errors(form.passwd.second) }}</div>
                    </div>
                    <div class="text-center mt-4">
                        <button class="btn btn-success" type="submit">{{ 'submit_button' }}</button>
                        <a href="{{ path('login') }}" class="btn btn-primary" >{{ 'login_link' }}</a>
                    </div>
                    {{ form_widget(form._token) }}
                </form>
            </div>
            <div class="col-md-3">&nbsp;</div>
        </div>
    </div>
{% endblock %}